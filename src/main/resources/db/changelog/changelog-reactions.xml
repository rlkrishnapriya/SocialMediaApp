<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="krishnapriya">
        <createTable tableName="reactions">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_reactions_users" references="users(id)"/>
            </column>
            <column name="parent_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="parent_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="reaction_type_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_reactions_reactiontypes" references="reaction_types(id)"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
                <dropTable tableName="reactions"/>
            </rollback>
    </changeSet>

</databaseChangeLog>